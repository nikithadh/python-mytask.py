		pyttsx3.speak("\n launching vlc player\n")
		os.system(" vlc ")
		print()
	elif(("run" in p) or ("execute" in p) or ("launch" in p) or ("open" in p)) and ("window media player" in p):
		pyttsx3.speak("\n launching windows media player \n ")
		os.system(" wmplayer ")
		print()
