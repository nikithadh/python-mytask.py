		pyttsx3.speak("\n launching webcam \n")
		os.system(" youcam ")
	elif(("run" in p) or ("execute" in p) or ("launch" in p) or ("open" in p)) and (("keil uvision4" in p) or ("keiluv4" in p)):
		pyttsx3.speak("\n launching keil uvision4 \n")
		os.system(" uv4 ")
	elif(("run" in p) or ("execute" in p) or ("launch" in p) or ("open" in p)) and (("notepad" in p) or ("text editor" in p) or ("editor" in p)):
	        pyttsx3.speak("\n launching notepad \n")
	        os.system("notepad")
	elif(("quit" in p) or ("stop" in p) or ("close" in p)):
		print("\n                               THANK YOU FOR USING VIRTUAL ASSISTANT                          \n")
