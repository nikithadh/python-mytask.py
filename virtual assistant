		pyttsx3.speak("\n launching adobe acrobat reader \n ")
		os.system(" acrord32 ")
		print()
	elif(("run" in p) or ("execute" in p) or ("launch" in p) or ("open" in p)) and ("wordpad" in p):
		pyttsx3.speak("\n launching wordpad \n ")
		os.system(" wordpad ")
		print()
	elif(("run" in p) or ("execute" in p) or ("launch" in p) or ("open" in p)) and ("paint" in p):
		pyttsx3.speak("\n launching ms paint \n ")
		os.system(" mspaint ")
		print()
	elif(("run" in p) or ("execute" in p) or ("launch" in p) or ("open" in p)) and ("code blocks" in p):
		pyttsx3.speak("\n launching code blocks \n")
		os.system(" codeblocks ")
		print()
	elif(("run" in p) or ("execute" in p) or ("launch" in p) or ("open" in p)) and ("view mate" in p):
		pyttsx3.speak("\n launching viewmate \n")
		os.system(" viewmate ")
		print()
